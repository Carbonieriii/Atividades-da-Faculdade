Exercicio 4


            int menor = 0, posicao_menor = 0;
            int[] N = new int[20] { 5555,13, 24,55,6,89,14,556,78,643,100,23,456,57,654,123,4,9,7,332};
            menor = N[0];
            for (int i = 0; i < 20; i++)
            {
                if (N[i] < menor) 
                {
                    menor = N[i];
                    posicao_menor = i;
                }
            }
            Console.WriteLine($"O menor numero encontrado foi:{menor} na posicao:{posicao_menor}");
            Console.ReadKey();
           
Exercicio 5

 int menor_idade = 0, maior_idade = 0, total_idade = 0;
            int[] N = new int[40] { 55,13, 24,55,6,8,14,56,8,63,10,23,46,7,64,13,4,9,7,32, 55, 13, 24, 55, 6, 8, 14, 56, 8, 63, 10, 23, 46, 7, 64, 13, 4, 9, 7, 32 };
            menor_idade = N[0];
            maior_idade = N[0];
            for (int i = 0; i < 40; i++)
            {
                if (N[i] < menor_idade) 
                {
                    menor_idade = N[i];
                }
                if (N[i] > maior_idade) 
                {
                    maior_idade = N[i];
                }
                total_idade += N[i];
            }

            Console.WriteLine($"A menor idade encontrada foi:{menor_idade}, maior idade foi:{maior_idade} e a media total é:{total_idade/40}");
            Console.ReadKey();
           
Exercicio 6

int X = 36, Quantidade_de_vezes = 0;
            int[] N = new int[10];
            for (int i = 0; i < N.Length; i++)
            {
                Console.WriteLine("Digite um numero inteiro: ");
                N[i] = int.Parse(Console.ReadLine());
               
            }
            for (int i = 0; i < N.Length; i++)
            {
                if (N[i] == X) 
                {
                    Quantidade_de_vezes++;
                }
            }

            Console.WriteLine($"A quantidade de vezes que x{X} aparece é:{Quantidade_de_vezes}");
            Console.ReadKey();
           
Exercicio 7

int nota = 0;
            string aluno = "";
            int[] N = new int[10];
            string[] Nome = new string[10];
            for (int i = 0; i < N.Length; i++)
            {
                Console.WriteLine("Digite um Nome: ");
                aluno = Console.ReadLine();

                Console.WriteLine("Digite a nota final: ");
                nota = int.Parse(Console.ReadLine());
                
                if (nota > 5) 
                {
                    N[i] = nota;               
                    Nome[i] = aluno;
                }
            }

            for (int i = 0; i < N.Length; i++)
            {
                if (N[i] > 0) 
                {
                    Console.WriteLine($"O aluno:{Nome[i]} tem a nota:{N[i]}");
                }
            }
           
            Console.ReadKey();
           
Exercicio 8

int Quantidades_impares = 0, Quantidades_pares = 0;
            int[] N = new int[10];
            for (int i = 0; i < N.Length; i++)
            {
                Console.WriteLine("Digite um número inteiro: ");
                N[i] = int.Parse(Console.ReadLine());
            }
            for (int i = 0; i < N.Length; i++)
            {
                if (N[i] % 2 == 1) 
                {
                    Quantidades_impares++;
                }
                else
                {
                    Quantidades_pares++;
                }
            }
            Console.WriteLine($"A Quantidade de números Impares é: {Quantidades_impares} e a quantidae de números pares é: {Quantidades_pares}");
        }

