                {
                    Console.Write(N[i, j] + "   ");
                    
                }
                Console.WriteLine();
            }
Exercicio 1 

static void Main(string[] args)
        {
            double A, B;
            Console.WriteLine("Digite um numero: ");
            A = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite um numero: ");
            B = double.Parse(Console.ReadLine());
            double Multiplicação = M (A, B);
            Console.WriteLine($" O resultado da multiplicação é: {Multiplicação}");
        }
        public static double M (double x, double y)
        {
            double multiplicação = x * y;
            return multiplicação;
        }

Exercicio 2 

 static void Main(string[] args)
        {
            double B, H;
            Console.WriteLine("Digite a base: ");
            B = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a altura: ");
            H = double.Parse(Console.ReadLine());
            double Multiplicação = M (B, H);
            Console.WriteLine($" A área do retangulo é: {Multiplicação}");
        }
        public static double M (double x, double y)
        {
            double multiplicação = x * y;
            return multiplicação;
        }

Exercicio 3[

static void Main(string[] args)
        {

            double A;
            Console.WriteLine("Digite o primeiro valor: ");
            A = double.Parse(Console.ReadLine());
            double Raiz = Math.Sqrt (A);
            Console.WriteLine($" A raiz quadrada do valor é: {Raiz}");
        }
        public static double Raiz (double x)
        {
            double Raiz_quadrada = Math.Sqrt(x);
            return Raiz_quadrada;
        }



Exercicio 4

// Giovanni Jacomo Carbonieri Lungarezi 8127684

public static void Main(string[] args)
            {
                int[] numero = new int[2];
                for (int i = 0; i < 2; i++)
                {
                    Console.WriteLine("Digite um numero: ");
                    numero[i] = int.Parse(Console.ReadLine());
                }
                int qtd = impares(numero);
                Console.WriteLine($"Os numeros impares são: {qtd}");
            }
            public static int impares(int[] arr)
            {
                int qtd = 0;
            for (int i = 0; i < 2; i++)
                {
                if (arr[i] % 2 == 1) 
                    {

                        qtd++;
                    }


                }
                return qtd;
            }

        }

